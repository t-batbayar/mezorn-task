<%- include("./parts/header") %>
    <div class="container">
        <h1 class="header">"Mezorn" даалгавар</h1>
        <form action="/" method="POST" enctype="multipart/form-data">

            <div class="form-row">
                <label for="register">Регистрийн дугаар: </label>
                <input type="text" placeholder="Регистрийн дугаар (Латинаар)" name="register" required>
                <% if (register) { %>
                    <span class="message">мэдээлэл таарсан <input type="checkbox" checked></span>
                <% } %>
            </div>

            <div class="form-row">
                <label for="passport">Иргэний үнэмлэхний нүүр зураг:</label>
                <input type="file" accept="image/*" name="passport" required>
                <% if (passport) { %>
                    <span class="message">мэдээлэл таарсан <input type="checkbox" checked></span>
                <% } %>
            </div>

            <div class="form-row">
                <label for="selfie">Үнэмлэхээ барьсан зураг:</label>
                <input type="file" accept="image/*" name="selfie" required>
                <% if (selfie) { %>
                    <span class="message">мэдээлэл таарсан <input type="checkbox" checked></span>
                <% } %>
            </div>

            <div>
                <button class="submit">Мэдээллийг илгээх</button>
            </div>
            <br>
            <br>
            <% if (message && message.length) { %>
                <p class="message"><%- message %></p>
            <% } %>
        </form>
    </div>
<%- include("./parts/footer") %>